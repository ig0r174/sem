mixin footer_li(link, title)
    li.footer-list__item
        a(href=link)=title

footer.footer
    div.footer__container
        div.footer__logo
            img.footer__logo__img(src="img/header/logo.svg" alt="logo")
        div.footer__menu
            ul.footer-list
                +footer_li('#', 'О компании')
                +footer_li('#', 'Доставка из Китая')
                +footer_li('#', 'Вакансии')
                +footer_li('#', 'Все услуги')
                +footer_li('#', 'Клиенту')
                +footer_li('#', 'Акции')
                +footer_li('#', 'Франчайзинг')
        div.footer__data
            a.footer__item(href="emailto:manager@uexpress.ru") manager@uexpress.ru
            div.footer__item 115221, г. Челябинск, ул. Северная, д. 29-в
            div.footer__item Мы работаем по 24 часа 5 дней в неделю
